#
# Here Application (On the RaspberryPI)
#

version: '3'
services:
  redis:
    image: "shellboot/rpi-redis"
    volumes:
      - ./var/redis:/var/redis
  mysql:
    image: "shellboot/rpi-mysql"
    environment:
      MYSQL_ROOT_PASSWORD: root
    volumes:
      - ./var/mysql:/var/mysql
#      - ./Config/docker/mysql/conf:/usr/local/mysql/etc/conf.d
  php:
    image: "shellboot/rpi-php:redis"
    volumes:
      - .:/var/www
  nginx:
    image: "shellboot/rpi-nginx"
    depends_on:
     - php
    volumes:
      - .:/var/www
      - ./Config/docker/nginx/conf:/usr/local/nginx/etc
    ports:
      - "80:80"
