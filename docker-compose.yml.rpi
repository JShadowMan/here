#
# Here Application (On the RaspberryPI)
#

version: '3'
services:
  php:
    image: "shellboot/rpi-php"
    volumes:
      - .:/var/www
  nginx:
    image: "shellboot/rpi-nginx"
    depends_on:
     - php
    volumes:
      - .:/var/www
      - ./Config/docker/nginx/conf:/usr/local/nginx/etc
    ports:
      - "80:80"
  redis:
    image: "shellboot/rpi-redis"
    volumes:
      - /var/redis:/var/redis
