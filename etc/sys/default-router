# ERROR
#
# ERROR ERROR_CODE HANDLER

ERROR 404 Here.Widget.Router@_router_404_error
ERROR 500 Here.Widget.Router@_router_500_error


# HOOK
#
# HOOK NAME HANDLER

HOOK authentication Here.Widget.Router@_router_hook_authentication
HOOK check_install Here.Widget.Router@_router_check_install


# ROUTER TABLE
#
# ROUTER METHOD URI CALLBACK HOOK

ROUTER  (GET)    ('/', '/index', '/index.$ext')              Here.Widget.Router@_router_index NULL

ROUTER  (GET)    ('/article/$article_title.@(html|php)')     Here.Widget.Router@_router_article NULL

ROUTER  (GET)    ('/message.@(html|php)')                    Here.Widget.Router@_router_message NULL

ROUTER  (GET)    ('/repo/$repo_name')                        Here.Widget.Router@_router_repo NULL

ROUTER  (GET)    ('/install')                                Here.Widget.Router@_router_install (check_install)

ROUTER  (GET)    ('/license.@(php|html)')                    Here.Widget.Router@_router_license NULL
